module manual_clocking(
	input rst_n,//å¤ä½ä¿¡å·
	
	input sw0, //æ‹¨åŠ¨å¼€å…?,ç”¨äºæ ‡è®°æ˜¯æ‰‹åŠ¨è°ƒæ—¶é—´è¿˜æ˜¯è‡ªåŠ¨è®¡æ—¶ï¼šä¸º1è‡ªåŠ¨è®¡æ—¶ï¼Œä¸º0æ‰‹åŠ¨è°ƒæ—¶é—?
	input sw1, //æ‹¨åŠ¨å¼€å…?ï¼Œç”¨äºæ ‡è®°æ˜¯æ‰‹åŠ¨è°ƒæ—¶é—´è¿˜æ˜¯æ‰‹åŠ¨è°ƒé—¹é’Ÿ
	input add_time,//æŒ‰é”®1(key1)ç”¨æ¥å†³å®šæ‰‹åŠ¨è°ƒæ•´çš„æ—¶åˆ†ç§’çš„å¤§å°ï¼Œæ¯æŒ‰ä¸‹ä¸€æ¬¡æŒ‰é”®ï¼ŒåŠ?
	input wire [1:0] option,//optionç­‰äº0è¡¨ç¤ºè°ƒç§’ã€ç­‰äº?è¡¨ç¤ºè°ƒåˆ†ã€ç­‰äº?è¡¨ç¤ºç­‰äºè°ƒå°æ—?
	
	output reg [3:0] manual_secL,//æ‰‹åŠ¨è°ƒæ—¶çš„ç§’çš„ä¸ªä½?
	output reg [3:0] manual_secH,//æ‰‹åŠ¨è°ƒæ—¶çš„ç§’çš„åä½?
	output reg [3:0] manual_minL,//æ‰‹åŠ¨è°ƒæ—¶çš„åˆ†çš„ä¸ªä½?
	output reg [3:0] manual_minH,//æ‰‹åŠ¨è°ƒæ—¶çš„åˆ†çš„åä½?
	output reg [3:0] manual_hourL,//æ‰‹åŠ¨è°ƒæ—¶çš„æ—¶çš„ä¸ªä½?
	output reg [3:0] manual_hourH//æ‰‹åŠ¨è°ƒæ—¶çš„æ—¶çš„åä½?
);

always @ (negedge add_time or negedge rst_n) begin
	if(!rst_n) begin //åˆå§‹åŒ?
		manual_secL <= 4'b0000;
		manual_secH <= 4'b0000;
		manual_minL <= 4'b0000;
		manual_minH <= 4'b0000;
		manual_hourL <= 4'b0000;
		manual_hourH <= 4'b0000;		
	end
	else begin
		if(sw0==0 && sw1==1) begin //sw=0è¡¨ç¤ºå¼€å¯æ‰‹åŠ¨æ¨¡å¼ï¼Œsw1=1è¡¨ç¤ºå¼€å§‹æ‰‹åŠ¨è°ƒæ—?
			if(manual_hourH==4'b0010 && manual_hourL==4'b0011 && manual_minH==4'b0101 && manual_minL==4'b1001 && manual_secH==4'b0101 && manual_secL==4'b1001) begin
				manual_secL <= 4'b0000;
				manual_secH <= 4'b0000;
				manual_minL <= 4'b0000;
				manual_minH <= 4'b0000;
				manual_hourL <= 4'b0000;
				manual_hourH <= 4'b0000;
 			end
			else begin
				if(option == 2'd0) begin
					if(manual_secL==4'd1001) begin
						manual_secL <= 4'b0000;
						if(manual_secH==4'd0101)
							manual_secH <= 4'b0000;
						else 
							manual_secH <= manual_secH + 1'b1;
					end
					else 
						manual_secL <= manual_secL + 1'b1;
				end
				if(option == 2'd1) begin
					if(manual_minL==4'd1001) begin
						manual_minL <= 4'b0000;
						if(manual_minH==4'd0101)
							manual_minH <= 4'b0000;
						else 
							manual_minH <= manual_minH + 1'b1;
					end
					else
						manual_minL <= manual_minL + 1'b1;
				end
				if(option == 2'd2) begin
					if(manual_hourH<4'd0010) begin //å¦‚æœå°æ—¶çš„åä½å°äº?
						if(manual_hourL==4'd1001) begin
							manual_hourL <= 4'b0000;
							manual_hourH <= manual_hourH + 1'b1;
						end
						else
							manual_hourL <= manual_hourL + 1'b1;	
					end
					if(manual_hourH==4'd0010) begin
						if(manual_hourL==4'd0011) begin
							manual_hourL <= 4'b0000;
							manual_hourH <= 4'b0000;
						end
						else
							manual_hourL <= manual_hourL + 1'b1;
					end	
				end
			end
		end
	end
end
 
endmodule

